<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body { font-family: Arial, sans-serif; }
        .form-container { max-width: 400px; margin: auto; padding: 20px; border: 1px solid #ccc; }
        input { width: 100%; padding: 8px; margin: 10px 0; }
        button { padding: 10px 20px; background-color: #4CAF50; color: white; border: none; cursor: pointer; }
        button:hover { background-color: #45a049; }
        .error { color: red; }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Register</h2>
        <form id="registrationForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            
            <label for="mobile_no">Mobile No:</label>
            <input type="text" id="mobile_no" name="mobile_no" required>
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            
            <label for="userid">Username:</label>
            <input type="text" id="userid" name="userid" required>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
			
			<label for="c_password">Confirm Password:</label>
            <input type="password" id="c_password" name="c_password" required>
            
            <button type="submit">Submit</button>
        </form>
        
        <div class="error" id="error-message"></div>
    </div>

    <script>
        $(document).ready(function(){
            $('#registrationForm').submit(function(e){
                e.preventDefault();

                // Clear previous error messages
                $('#error-message').html('');

                // Get form data
                var name = $('#name').val();
                var mobile_no = $('#mobile_no').val();
                var email = $('#email').val();
                var userid = $('#userid').val();
                var password = $('#password').val();
				var c_password = $('#c_password').val();

                // Validate fields
                if (!name || !mobile_no || !email || !userid || !password) {
                    $('#error-message').text('All fields are required!');
                    return;
                }
				
				if(password!==c_password)
				{
				    $('#error-message').text('The Confirm Password does not match the Password!');
                    return;
				}

                // Prepare data to be sent via AJAX
                var userData = {
                    name: name,
                    mobile_no: mobile_no,
                    email: email,
                    userid: userid,
                    password: btoa(password) // Base64 encode the password
                };

                // Make AJAX call to server
                $.ajax({
						url: 'server/register.php',
						type: 'POST',
						data: { data: JSON.stringify(userData) },
						success: function(response){
							if(response.status === 'success'){
								alert('Registration successful!');
							} else {
								$('#error-message').text(response.message); // Display the error message
							}
						},
						error: function(){
							$('#error-message').text('An error occurred while submitting your data.');
						}
					});

            });
        });
    </script>

</body>
</html>
